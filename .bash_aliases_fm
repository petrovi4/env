alias gmd='gchm && git merge dev'
alias gmdt='git checkout master && git merge dev -X theirs'

function startProcessFolder(){
	printf "\--------------------- Now %s %s\n" $1 ${PWD##*/}
}

function doneProcessFolder(){
	printf "\--------------------- Done %s\n\n" ${PWD##*/}
}

function gr() {
	startProcessFolder "release"

	git checkout dev
	git pull
	git checkout master
	git pull
	git merge dev
	git push
	git checkout dev

	doneProcessFolder
}

